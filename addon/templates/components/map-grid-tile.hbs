{{#if hasTileImage}}
  <image xlink:href="{{model.tileImage}}" 
    x="0" y="0" 
    width="{{pixelsPerLength}}" height="{{pixelsPerLength}}" />

{{else}}
  <rect x="0" y="0"
    rx="10" ry="10" 
    width="{{pixelsPerLength}}" height="{{pixelsPerLength}}" 
    stroke-width="{{stroke.width}}" stroke="{{stroke.color}}" 
    fill="{{fill}}" />
{{/if}}
{{#if iconText}}
  <text class="fa" x="{{halfLength}}" y="{{halfLength}}">{{iconText}}</text>
{{/if}}