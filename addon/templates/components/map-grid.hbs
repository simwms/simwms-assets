<g class="map-grid-canvas" transform={{canvasTransform}}>
  {{#if gridVisible}}
    <g class="map-grid-lines">
      {{#each lines as |line|}}
        <line x1="{{line.x1}}" y1="{{line.y1}}" 
              x2="{{line.x2}}" y2="{{line.y2}}" 
              class="map-grid-line" />
      {{/each}}
    </g>
  {{/if}}
  <g class="map-grid-contents">
    {{yield this}}
  </g>
</g>
{{map-grid-edge-scroll position="top"}}
{{map-grid-edge-scroll position="bottom"}}
{{map-grid-edge-scroll position="left"}}
{{map-grid-edge-scroll position="right"}}
